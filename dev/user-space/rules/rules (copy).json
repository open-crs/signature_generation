[
    {
        "name": "monitor important files",
        "desc": "monitor if important files are opened",
        "condition": {
            "path": [
                "/etc/passwd",
                "/etc/shadow",
                "/etc/group"
            ],
            "syscalls": [
                "openat",
                "read",
                "write"
            ]
        }
    },
    {
        "importantFiles": [
            "/etc/passwd",
            "/etc/shadow",
            "/etc/group"
        ],
        "priority": "WARNING"
    }
]